//01. Crie uma fun√ß√£o que recebe como par√¢metro um n√∫mero inteiro e devolve o seu 
dobro.

#include <stdio.h>

int dobro(int nu);

void main() {
    int Numero;

    printf("Digite um n√∫mero: ");
    scanf("%d", &Numero);

    printf("O dobro de %d eh %d\n", numero, dobro(Numero));
}

int dobro(int nu) {
    return nu * 2;
}



//02.Fa√ßa uma fun√ß√£o que receba a data atual (dia, m√™s e ano em inteiro) e exiba-a na tela no
formato textual por extenso. Ex.: Data: 18/11/2022, Imprimir: 18 de novembro de 2022.


#include <stdio.h>

void formatDate(int dia, int mes, int ano);

void main()
{
    int dia, mes, ano;

    scanf("%d/%d/%d", &dia, &mes, &ano);
    formatDate(dia, mes, ano);
}

void formatDate(int dia, int mes, int ano)
{
    char* mess [] = {"janeiro", "fevereiro", "mar√ßo", "abril", "maio", "junho", "julho", "agosto", "setembro", "outubro", "novembro", "dezembro"};

    printf("%d de %s de %d\n", dia, mess [mes - 1], ano);


}



//03. Fa√ßa uma fun√ß√£o para verificar se um n√∫mero √© positivo ou negativo. Sendo
 que o valor de retorno ser√° 1 se positivo, -1 se negativo e 0 se for igual a 0.



#include <stdio.h>

int checkNumber(int numero);

void main()
{
    int numero;

    scanf("%d", &numero);
    printf("%d\n", checkNumber(numero));
}

int checkNumber(int numero)
{
    if (numero > 0)
        return 1;
    else if (numero < 0)
        return -1;
    else
        return 0;
}



//04.Fa√ßa uma fun√ß√£o para verificar se um n√∫mero √© um quadrado perfeito. Um quadrado perfeito √© um n√∫mero inteiro n√£o negativo 
que pode ser expresso como o quadrado de outro n√∫mero inteiro. Ex.: 1, 4, 9...



#include <stdio.h>

int checkPerfectSquare(int numero);

void main()
{
    int numero;

    scanf("%d", &numero);
    
    if (checkPerfectSquare(numero)) printf("Temos um quadrado perfeito\n");
    else printf("N√£o √© um quadrado perfeito!!\n");
}

int checkPerfectSquare(int numero)
{
    int i = 1;

    while (i * i < numero)
        i++;

    if (i * i == numero)
        return 1;
    else
        return 0;


//5. Fa√ßa uma fun√ß√£o e um programa de teste para o c√°lculo do volume de uma esfera. 
Sendo que o raio √© passado por par√¢metro.


#include <stdio.h>

float sphereVolume(float raio);

void main()
{
    float raio;

    scanf("%f", &raio);
    printf("%.2f de volume.\n", sphereVolume(raio));
}

float sphereVolume(float raio)
{
    return (4.0 / 3.0) * 3.14159 * raio * raio * raio;
}


//06.Fa√ßa uma fun√ß√£o que receba 3 n√∫meros inteiros como par√¢metro, representando 
horas, minutos e segundos, e os converta em segundos.

#include <stdio.h>

int convertToSeconds(int horas, int minutos, int segundos);

void main()
{
    int horas, minutos, segundos;

    scanf("%d:%d:%d", &horas, &minutos, &segundos);
    printf("%d segundos.\n ", convertToSeconds(horas, minutos, segundos));
}

int convertToSeconds(int horas, int minutos, int segundos)
{
    return horas * 3600 + minutos * 60 + segundos;
}


//07.Fa√ßa uma fun√ß√£o que receba uma temperatura em graus Celsius e retorne-a
convertida em graus Fahrenheit. A f√≥rmula de convers√£o √©: ùêπ=ùê∂‚àó(9,05,0)+32,0, 
sendo F a temperatura em Fahrenheit e C a temperatura em Celsius.

#include <stdio.h>

float convertToFahrenheit(float celsius);

void main()
{
    float celsius;

    scanf("%f", &celsius);
    printf("%.2f\n", convertToFahrenheit(celsius));
}

float convertToFahrenheit(float celsius)
{
    return celsius * (9.0 / 5.0) + 32.0;
}



//8. Sejam a e b os catetos de um triangulo, onde a hipotenusa √© obtida pela equa√ß√£o: hipotenusa=‚àöùëé2 + ùëè2. Fa√ßa uma fun√ß√£o
que receba os valores de a e b e calcule o valor da hipotenusa atrav√©s da equa√ß√£o.


#include <stdio.h>
#include <math.h>

float calculateHypotenuse(float a, float b);

void main()
{
    float a, b;

    scanf("%f %f", &a, &b);
    printf("%.2f\n", calculateHypotenuse(a, b));
}

float calculateHypotenuse(float a, float b)
{
    return sqrt(a * a + b * b);
} 



//09. Fa√ßa uma fun√ß√£o que receba a altura e o raio de um cilindro circular e retorne o volume do cilindro. O volume de 
um cilindro circular √© calculado por meio da seguinte f√≥rmula: ùëâ= ÔÅ∞ ‚àóùëüùëéùëñùëú2‚àóùëéùëôùë°ùë¢ùëüùëé, onde ÔÅ∞ = 3.141592.



#include <stdio.h>

float cylinderVolume(float raio, float altura);

void main()
{
    float raio, altura;

    scanf("%f %f", &raio, &altura);
    printf("O volume do cilindro √© %.2f\n", cylinderVolume(raio, altura));
}

float cylinderVolume(float raio, float altura)
{
    return 3.141592 * raio * raio * altura;
}


//10. Fa√ßa uma fun√ß√£o que receba dois n√∫meros e retorne qual deles √© o maior.

#include <stdio.h>

int max(int a, int b);

void main()
{
    int a, b;

    scanf("%d %d", &a, &b);
    printf(" O maior numero √© %d\n", max(a, b));
}

int max(int a, int b)
{
    if (a > b)
        return a;
    else
        return b;
}


//11. Elabore uma fun√ß√£o que receba tr√™s notas de um aluno como par√¢metros e uma letra. Se a letra for A, a fun√ß√£o dever√°
calcular a m√©dia aritm√©tica das notas do aluno; se for P, dever√° calcular a m√©dia ponderada, com pesos 5, 3 e 2.

#include <stdio.h>

float calculateAverage(float Grade1, float Grade2, float Grade3, char opcao);

void main()
{
    float Grade1, Grade2, Grade3;
    char opcao;

    scanf("%f %f %f %c", &Grade1, &Grade2, &Grade3, &opcao);
    printf("%.2f\n", calculateAverage(Grade1, Grade2, Grade3, opcao));
}

float calculateAverage(float Grade1, float Grade2, float Grade3, char opcao)
{
    if (opcao == 'A')
    {
        return (Grade1 + Grade2 + Grade3) / 3.0;
    }
    else if (opcao == 'P')
    {
        return (Grade1 * 5.0 + Grade2 * 3.0 + Grade3 * 2.0) / 10.0;
    }
    else
    {
        return 0.0;
    }
}


//12. Escreva uma fun√ß√£o que receba um n√∫mero inteiro maior do que zero e retorne a soma 
de todos os seus algarismos. Por exemplo, ao n√∫mero 251 corresponder√° o valor 8 (2 + 5 + 1).
Se o n√∫mero lido n√£o for maior do que zero, o programa terminar√° com a mensagem ‚ÄúN√∫mero inv√°lido‚Äù.

#include <stdio.h>

int sumDigits(int numero );

void main()
{
    int numero;

    scanf("%d", &numero);
    if (numero > 0)
        printf(" A soma dos algarimos √© %d\n", sumDigits(numero));
    else
        printf("N√∫mero inv√°lido\n");
}

int sumDigits(int numero)
{
    int som = 0;

    while (numero > 0)
    {
        som += numero % 10;
        numero /= 10;
    }

    return som;
}


//13.Fa√ßa uma fun√ß√£o que receba dois valores num√©ricos e um s√≠mbolo. Este s√≠mbolo representar√° 
a opera√ß√£o que se deseja efetuar com os n√∫meros. Se o s√≠mbolo for ‚Äò+‚Äô dever√° ser realizada uma 
adi√ß√£o, se for ‚Äò‚Äì‚Äò uma subtra√ß√£o, se for ‚Äò*‚Äô uma multiplica√ß√£o e se for ‚Äò/‚Äô ser√° efetuada uma divis√£o.

#include <stdio.h>

float calculate(float a, float b, char symbol);

void main()
{
    float a, b;
    char symbol;

    scanf("%f %f %c", &a, &b, &symbol);
    printf("%.2f\n", calculate(a, b, symbol));
}

float calculate(float a, float b, char symbol)
{
    if (symbol == '+')
    {
        return a + b;
    }
    else if (symbol == '-')
    {
        return a - b;
    }
    else if (symbol == '*')
    {
        return a * b;
    }
    else if (symbol == '/')
    {
        return a / b;
    }
    else
    {
        return 0.0;
    }
}


//14.Fa√ßa uma fun√ß√£o que receba a dist√¢ncia em Km e a quantidade de litros de gasolina consumidos
 por um carro em um percurso, calcule o consumo em Km/l e escreva uma mensagem de acordo com a tabela abaixo:

CONSUMO   |	(Km/l)	|	MENSAGEM
menor que |	8		    | Venda o carro!
entre		  | 8 e 14	|	Econ√¥mico!
maior que | 14		  | Super econ√¥mico!



#include <stdio.h>

void calculateConsumption(float distancia , float liters);

void main()
{
    float distancia, litros;

    scanf("%f %f", &distancia, &litros);
    calculateConsumption(distancia, litros);
}

void calculateConsumption(float distancia, float litros)
{
    float consumo = distancia / litros;

    if (consumo < 8)
    {
        printf("Venda o carro!\n");
    }
    else if (consumo >= 8 && consumo <= 14)
    {
        printf("Econ√¥mico!\n");
    }
    else
    {
        printf("Super econ√¥mico!\n");
    }
}


//15.Crie um programa que receba tr√™s valores (obrigatoriamente maiores que zero), representando as 
medidas dos tr√™s lados de um tri√¢ngulo. Elabore fun√ß√µes para:
a) Determinar se eles lados formam um tri√¢ngulo, sabendo que:
-O comprimento de cada lado de um tri√¢ngulo √© menor do que a soma dos outros dois lados.
b) Determinar e mostrar o tipo de tri√¢ngulo, caso as medidas formem um tri√¢ngulo. Sendo que:
-Chama-se equil√°tero o tri√¢ngulo que tem tr√™s lados iguais;
-Denominam-se is√≥sceles o tri√¢ngulo que tem o comprimento de dois lados iguais;
-Recebe o nome de escaleno o tri√¢ngulo que tem os tr√™s lados diferentes.

#include <stdio.h>

int isTriangle(float a, float b, float c);
void triangleType(float a, float b, float c);

void main()
{
    float a, b, c;

    scanf("%f %f %f", &a, &b, &c);
    if (isTriangle(a, b, c)) triangleType(a, b, c);
    else printf("Nao e um triangulo\n");
}

int isTriangle(float a, float b, float c)
{
    if (a < b + c && b < a + c && c < a + b) return 1;
    else return 0;
}

void triangleType(float a, float b, float c)
{
    if (a == b && b == c) printf("Equilatero\n");
    else if (a == b || b == c || a == c) printf("Isosceles\n");
    else printf("Escaleno\n");
}



//16. Fa√ßa uma fun√ß√£o chamada desenha_linha. Ele deve desenhar uma linha na tela usando uma sequ√™ncia de s√≠mbolos de 
igual (Ex.: ========). A fun√ß√£o recebe por par√¢metro quantos sinais de igual ser√£o mostrados.

#include <stdio.h>

void drawLine(int numero);

void main()
{
    int numero;

    scanf("%d", &numero);
    drawLine(numero);
}

void drawLine(int numero)
{
    int i;

    for (i = 0; i < numero; i++)
        printf("=");
    printf("\n");
}



//17.Fa√ßa uma fun√ß√£o que receba dois n√∫meros inteiros positivos por par√¢metro e retorne 
a soma dos N n√∫meros inteiros existentes entre eles.

#include <stdio.h>

int sumBetween(int a, int b);

void main()
{
    int a, b;

    scanf("%d %d", &a, &b);
    printf("%d\n", sumBetween(a, b));
}

int sumBetween(int a, int b)
{
    int sum = 0;

    if (a > b) {
        int aux = a;
        a = b;
        b = aux;
    }

    for (int i = a + 1; i < b; i++)
        sum += i;

    return sum;
}


//18.Fa√ßa uma fun√ß√£o que receba por par√¢metro dois valores inteiros x e z. Calcule e retorne o resultado de xz para o programa principal.
 Aten√ß√£o n√£o utilize nenhuma fun√ß√£o pronta de exponencia√ß√£o.


#include <stdio.h>

int power(int x, int z);

void main()
{
    int x, z;

    scanf("%d %d", &x, &z);
    printf("%d\n", power(x, z));
}

int power(int x, int z)
{
    int result = 1;

    for (int i = 0; i < z; i++)
        result *= x;

    return result;
}


