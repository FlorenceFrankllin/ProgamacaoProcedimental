/*
31. Leia um n√∫mero inteiro e imprima o seu antecessor e o seu sucessor.
*/

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int  N,NA,NS;
    printf("Digite um valor:\n");
    scanf("%d",&N);
   NA= --N;
   NS= N + 1 + 1;
   printf("O Numero antecessor e:\n%d\n",NA);
   printf("O Numero sucessor e:\n%d",NS);
   
    return 0;
}

