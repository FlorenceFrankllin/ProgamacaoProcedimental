/*
31. Leia um número inteiro e imprima o seu antecessor e o seu sucessor.
*/

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int  N,NA,NS;
    printf("Digite um valor:\n");
    scanf("%d",&N);
   NA= --N;
   NS= N + 1 + 1;
   printf("O Numero antecessor e:\n%d\n",NA);
   printf("O Numero sucessor e:\n%d",NS);
   
    return 0;
}

/*
32. Leia um número inteiro e imprima a soma do sucessor de 
seu triplo com o antecessor de seu dobro.
*/

#include <stdio.h>
#include <stdlib.h>

int main()
{
   int  N,NA,NS, Soma;
   printf("Digite um valor:\n");
   scanf("%d",&N);
   NA= --N;
   NS= N + 1 + 1;
   Soma=NA+NS;
   printf("Soma do sucessor com o antecessor e:\n%d",Soma);
   
    return 0;
}

/*
