*/

#include <stdio.h>
#include <stdlib.h>

int main ()
{
      float G, R, PI=3.141592;
    
    printf("Digite um ângulo em radianos:");
    scanf("%f", &R);
     G = R*180/PI;
    printf("O angulo convertido em graus e:%.f\n",G);
    
    return 0;
}

