/*
28. Faça a leitura de três valores e apresente como resultado a soma dos quadrados dos três valores lidos.
*/

#include <stdio.h>
#include <stdlib.h>

int main ()
{
    float N1, N2, N3, Soma; //N1=Numero 1, N2=numero2, N3=Numero, Soma=resultado dos quadrados dos três valores.
    printf("Digite três valores: \n");
    scanf("%f%f%f",&N1,&N2,&N3);
    Soma=pow(N1,2)+pow(N2,2)+ pow(N3,2);
    printf("A soma dos quadrados dos 3 numeros:%.2f",Soma);
    
    return 0;
}

/*
29. Leia quatro notas, calcule a média aritmética e imprima o resultado.
*/

#include <stdio.h>
#include <stdlib.h>

int main ()
{
    float N1, N2, N3 ,N4, MA; //N1=Numero 1, N2=numero2, N3=Numero, MA= Media aritmética
    printf("Digite quatro notas: \n");
    scanf("%f%f%f%f",&N1,&N2,&N3,&N4);
    MA=((N1+N2+N3+N4)/4);
    printf("A Media aritmética das quatros notas e :%.2f",MA);
    
    return 0;
}

