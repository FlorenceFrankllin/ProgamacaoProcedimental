    printf("Digite o numero de faltas: ");
    scanf("%d", &F);

    if (N >= 9.0) C = 'A';
    else if (N >= 7.5) C = 'B';
    else if (N >= 5.0) C = 'C';
    else if (N >= 4.0) C = 'D';
